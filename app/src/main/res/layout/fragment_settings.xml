<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="waitr.vendorapp.mc.waitruser.Fragments.SettingsFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receive Notifications when \norder completes"
            android:id="@+id/switch_notifications_order"
            android:layout_gravity="left|top" />
        <Switch
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receive Notifications when \nnew item in menu"
            android:id="@+id/switch_notifications_new_item"
            android:layout_gravity="left|top" />


    </LinearLayout>




</FrameLayout>
