<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/color_black</item>

    </style>

    <style name="FrameLayout">
        <item name="android:background">@color/color_window_background</item>
    </style>

    <style name="RippleStyle">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#DDDDDD</item>
        <item name="mrl_rippleAlpha">0.7</item>
        <item name="mrl_rippleDimension">45dp</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleDuration">200</item>
        <item name="mrl_rippleFadeDuration">50</item>
        <item name="mrl_rippleBackground">@android:color/transparent</item>
        <item name="mrl_rippleDelayClick">true</item>
        <item name="mrl_ripplePersistent">false</item>
        <item name="mrl_rippleInAdapter">false</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/material_grey_600</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.DeviceDefault.ProgressBar.Horizontal">
        <item name="android:color">@color/button_color</item>
    </style>

    <style name="TextViewAppearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
    </style>

    <style name="TextViewAppearance.Headline2" parent="@style/TextViewAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/cpb_white</item>
    </style>

</resources>
